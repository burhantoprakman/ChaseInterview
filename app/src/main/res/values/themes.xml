<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChaseInterview" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ChaseInterview" parent="Base.Theme.ChaseInterview" />

    <!-- Splash Screen Theme -->
    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <!-- Set your splash screen logo/icon -->
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <!-- Optional: Customize the animation duration -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- After the splash screen, apply your app theme -->
        <item name="postSplashScreenTheme">@style/Theme.ChaseInterview</item>
    </style>
</resources>